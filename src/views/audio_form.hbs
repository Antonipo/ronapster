<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/audios/add" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" name="title" 
                        class="form-control" placeholder="Audio title">
                    </div>
                    <div class="form-group">
                        <textarea name="description" 
                        class="form-control" placeholder="Audio Description"></textarea>
                    </div>
                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input type="file" name="audio" class="custom-file-input" id="inputGroupFile01">
                            <label for="inputGroupFile01" class="custom-file-label">Choose a audio</label>
                        </div>
                    </div>
                    <button class="btn btn-primary">
                        Upload your audio
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="cold-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Operation</th>
                </tr>
            </thead>
            <tbody>
                {{#each audio}}
                <tr>
                    <td>{{title}}</td>
                    <td>
                        <a href="{{audioURL}}" target="_blank" class="btn btn-primary">View</a>
                        <a href="/audios/delete/{{_id}}" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

